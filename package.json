{
  "name": "budgeting-financial-tool",
  "version": "1.0.0",
  "description": "A minimalistic financial budgeting application",
  "private": true,
  "scripts": {
    "dev": "concurrently -k \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "build": "cd frontend && npm run build",
    "copy:dist": "node -e \"const fs=require('fs');if(fs.existsSync('../backend/dist'))fs.rmSync('../backend/dist',{recursive:true});fs.cpSync('dist','../backend/dist',{recursive:true});fs.rmSync('dist',{recursive:true});console.log('Dist copied to backend')\"",
    "start": "cd backend && npm start",
    "deploy": "cd backend && node deploy.mjs --build",
    "deploy:reset": "cd backend && node deploy.mjs --build --reset"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
